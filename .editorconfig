root = true

# Assume UNIX defaults
[*]
charset                  = utf-8
indent_style             = tab
indent_size              = tab
tab_width                = 8
end_of_line              = lf
insert_final_newline     = true
trim_trailing_whitespace = true

# Limited support defaults
max_line_length    = 80
quote_type         = double
indent_brace_style = Allman
